<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="100dp"
              android:background="@drawable/flat_button_sandrift">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:orientation="vertical" android:background="@drawable/flat_button_beige"
                  android:paddingTop="60dp">

        <Button android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:text="Incoming Goods"
                android:id="@+id/bnGoodsinManagerIncomingGoods"
                android:background="@drawable/button_blue"
                android:layout_gravity="center"
                style="@style/ButtonText"
                android:drawableLeft="@drawable/appbar_new"/>
        <Button android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:id="@+id/bnExitActGoodsinManager"
                android:background="@drawable/button_red"
                android:layout_gravity="center"
                style="@style/ButtonText"
                android:drawableLeft="@drawable/appbarpower"/>

    </LinearLayout>

</LinearLayout>