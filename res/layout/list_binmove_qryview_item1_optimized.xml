<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/lebelblue_list_selector_holo_light">
    <LinearLayout
            android:id="@+id/lytDetailImage"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="#e5e5e5"
            android:orientation="horizontal"
            android:focusable="false">

        <ImageView
                android:id="@+id/imgAlbum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_detail_center"
                android:scaleType="fitXY"
                android:focusable="false"
                android:src="@drawable/nopic" />

        <LinearLayout
                android:id="@+id/lytDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e5e5e5"
                android:orientation="vertical"
                android:focusable="false">

            <TextView
                    android:id="@+id/txtv_Artist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="@string/defaultLabelText"
                    android:textColor="#957700"
                    android:textColorHint="#957700"
                    android:textSize="18sp"
                    android:width="0dip"/>

            <TextView
                    android:id="@+id/txtv_Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="@string/defaultLabelText"
                    android:textColor="#6699FF"
                    android:textColorHint="#6699FF"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:width="0dip"/>
        </LinearLayout>
        <!-- *******************************HERE*********************************-->
    </LinearLayout>
    <!-- ************************** End of Horizontal here ******************** -->
    <LinearLayout
            android:id="@+id/lytDetailMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusable="false">

        <LinearLayout
                android:id="@+id/lytBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <!--<ImageView-->
                    <!--android:id="@+id/imgBarcode"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_margin="0dp"-->
                    <!--android:contentDescription="@string/image_description" />-->

            <com.proper.data.customcontrols.LetterSpacingTextView
                    android:id="@+id/lblBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center_horizontal"
                    android:text="@string/defaultLabelText"
                    android:textColor="#000000" />
        </LinearLayout>
        <!-- *****************************End of Barcode HERE******************************-->
        <LinearLayout
                android:id="@+id/lytFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/lblFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="left"
                    android:text="@string/defaultLabelText"
                    android:textColor="#7C7C53" />

            <TextView
                    android:id="@+id/txtvFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="right"
                    android:text="@string/defaultLabelText" />
        </LinearLayout>
        <!-- *****************************End of Format HERE******************************-->
        <LinearLayout
                android:id="@+id/lytSupplierCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/lblSupplierCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="left"
                    android:text="@string/defaultLabelText"
                    android:textColor="#7C7C53" />

            <TextView
                    android:id="@+id/txtvSupplierCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="right"
                    android:text="@string/defaultLabelText" />
        </LinearLayout>
        <!-- *****************************End of SupplierCat HERE******************************-->
        <LinearLayout
                android:id="@+id/lytQtyInBin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/lblQtyInBin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="left"
                    android:text="@string/defaultLabelText"
                    android:textColor="#7C7C53" />

            <TextView
                    android:id="@+id/txtvQtyInBin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fiveDp_margin"
                    android:gravity="right"
                    android:text="@string/defaultLabelText" />
        </LinearLayout>
        <!-- *****************************End of QtyInBin HERE******************************-->
    </LinearLayout>
</LinearLayout>