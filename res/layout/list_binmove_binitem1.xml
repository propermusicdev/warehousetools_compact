<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/lebeltelerik_list_selector_holo_light">
    <ImageView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:maxWidth="10dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:contentDescription="Bin image"
            android:src="@drawable/bin" />

    <TextView
            android:id="@+id/binCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Bin Code"
            android:textSize="20sp"
            android:textColor="@drawable/lebel_binlist_item1color"
            android:textStyle="normal" />
    <!-- android:textColor="#957700" -->
    <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text="Quantity"
            android:textSize="16sp"
            android:textColor="@drawable/lebel_binlist_item1color"
            android:textStyle="bold"/>

</LinearLayout>