<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/lytSelectionMain"
              android:background="@drawable/lebeltelerik_list_selector_holo_light">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bin Qty:"
                android:id="@+id/lblSelectionBinQty"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SuppCat:"
                android:id="@+id/lblSelectionSuppCat"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="MoveQty:"
                android:id="@+id/lblSelectionMoveQty"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:id="@+id/lytSelectionHolder">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:gravity="center"
                android:text="101"
                android:id="@+id/txtSelectionBinQty"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CAT500BN"
                android:gravity="center"
                android:id="@+id/txtSelectionSuppCat"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="1dp"
                android:id="@+id/lytSelectionHolderMoveQty">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="100"
                    android:gravity="center"
                    android:id="@+id/txtSelectionMoveQty"/>
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:background="@drawable/button_green"
                    android:src="@drawable/appbaradd"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/bnSelectionPlus"/>
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/button_red"
                    android:src="@drawable/appbarminus"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/bnSelectionMinus"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>