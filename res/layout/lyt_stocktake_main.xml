<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@drawable/flat_button_sandrift">
    <LinearLayout
            android:id="@+id/lytOuterMain"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_beige"
            android:padding="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="120dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="To Resume StockTake please press Continue"
                android:textColor="#000000"
                android:id="@+id/txtvStockTakeMainIntro"/>
        <Button android:layout_marginLeft="20dp"
                android:layout_width="fill_parent"
                android:text="@string/action_continue"
                android:id="@+id/bnStockTakeMainBegin"
                android:background="@drawable/button_green"
                android:layout_gravity="center"
                style="@style/ButtonTextSmall"
                android:drawableLeft="@drawable/appbararrowright"/>
        <Button android:layout_marginLeft="20dp"
                android:layout_width="fill_parent"
                android:text="@string/action_exit"
                android:id="@+id/bnExitActStockTakeMain"
                android:background="@drawable/button_red"
                android:layout_gravity="center"
                style="@style/ButtonTextSmall"
                android:drawableLeft="@drawable/appbararrowright"/>
    </LinearLayout>

</LinearLayout>