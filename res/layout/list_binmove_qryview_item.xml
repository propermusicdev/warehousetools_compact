<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/lytShortDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <ImageView
                android:id="@+id/imgBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="0dp"
                android:contentDescription="@string/image_description" />

        <com.proper.data.customcontrols.LetterSpacingTextView
                android:id="@+id/lblBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:text="@string/defaultLabelText"
                android:textColor="#000000" />

        <TextView
                android:id="@+id/lblShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvShortDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="5dp"
                android:singleLine="false"
                android:maxLines="4"
                android:width="0dp"
                android:text="@string/LoreIpsum" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytBinNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblBinNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvBinNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytOutOfStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblOutOfStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvOutOfStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytOnHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblOnHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvOnHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lytPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="left"
                android:text="@string/defaultLabelText"
                android:textColor="#7C7C53" />

        <TextView
                android:id="@+id/txtvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fiveDp_margin"
                android:gravity="right"
                android:text="@string/sampletext" />
    </LinearLayout>
</LinearLayout>