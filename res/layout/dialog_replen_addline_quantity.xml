<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:id="@+id/lyt_dialogQuantity"
              android:background="#222222">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:orientation="vertical" android:background="#222222">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@drawable/button_black"
                      android:id="@+id/lyt_dialogHeader">
            <ImageView android:id="@+id/imgDialogTitle"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_gravity="left"
                       android:src="@drawable/dialod64info"
                       android:contentDescription="title logo"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Enter New Line Quantity"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:id="@+id/DialogTitle"/>

        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="10dp"
                      android:background="@drawable/border"
                      android:id="@+id/lyt_dialogBody">
            <!--SrcBin-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:id="@+id/lyt_dialogSrcBin">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.26"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SrcBin:"
                        android:textColor="#ffffff"
                        android:id="@+id/lblReplenDialogSrcBin"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="horizontal" android:layout_weight="0.64">
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="CAT500BN"
                            android:inputType="textCapCharacters" android:gravity="center" android:ems="12" android:textStyle="bold"
                            android:textColor="#00ffff" android:hint="Like: 2KBL2" android:singleLine="true" android:maxLines="1"
                            android:textColorHint="#00ffff" android:background="@null" android:imeOptions="actionDone"
                            android:id="@+id/etxtReplenDialogSrcBin"/>
                    <Button android:text="EDIT"
                            android:background="@drawable/button_purpple"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="0.5"
                            style="@style/ButtonTextTiny"
                            android:drawableLeft="@drawable/appbar_edit_box"
                            android:id="@+id/bnReplenDialogSrcBinByHand"/>
                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
            <!--DstBin-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:id="@+id/lyt_dialogDstBin">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.26"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="DstBin:"
                        android:textColor="#ffffff"
                        android:id="@+id/lblReplenDialogDstBinn"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:orientation="horizontal" android:layout_weight="0.64">
                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="CAT500BN"
                            android:inputType="textCapCharacters" android:gravity="center" android:ems="12" android:textStyle="bold"
                            android:textColor="#00ffff" android:hint="Like: 2KBL2" android:singleLine="true" android:maxLines="1"
                            android:textColorHint="#00ffff" android:background="@null" android:imeOptions="actionDone"
                            android:id="@+id/etxtReplenDialogDstBin"/>
                    <Button android:text="EDIT"
                            android:background="@drawable/button_purpple"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="0.5"
                            style="@style/ButtonTextTiny"
                            android:drawableLeft="@drawable/appbar_edit_box"
                            android:id="@+id/bnReplenDialogDstBinByHand"/>
                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
            <!--Catalog-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:id="@+id/lyt_dialogSuppCat">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Catalog:"
                        android:textColor="#ffffff"
                        android:id="@+id/lblReplenDialogSuppCat"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:text="CAT500BN"
                        android:textColor="#ffffff"
                        android:id="@+id/txtReplenDialogSuppCat"/>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
            <!--BinQty-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:id="@+id/lyt_dialogBinQty">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total Quantity:"
                        android:textColor="#ffffff"
                        android:id="@+id/lblReplenDialogLineQty"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="1369"
                        android:textColor="#ffffff"
                        android:id="@+id/txtReplenDialogLineQty"/>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
            <!--Quantities-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="New Line Qty:"
                            android:textColor="#ffffff"
                            android:id="@+id/lblReplenDialogNewLineQty"/>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lytDialogHolder">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="1dp"
                            android:id="@+id/lytReplenDialogHolderNewLineQty">
                        <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:hint="1009"
                                android:textColorHint="#ffffff"
                                android:gravity="center"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:selectAllOnFocus="true"
                                android:id="@+id/etxtReplenDialogNewLineQty"/>
                    </LinearLayout>
                    <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:background="@drawable/button_green"
                            android:src="@drawable/appbaradd"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:id="@+id/bnReplenDialogPlus"/>
                    <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/button_red"
                            android:src="@drawable/appbarminus"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:id="@+id/bnReplenDialogMinus"/>
                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>       <!-- Line Separator -->
            <!--Quantities-->
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="2dp"
                          android:id="@+id/lyt_Dialog_butons">
                <Button android:text="Enter"
                        android:background="@drawable/button_yellow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        style="@style/ButtonTextTiny"
                        android:drawableLeft="@drawable/appbarcursorhand"
                        android:id="@+id/bnReplenDialogByHand"/>
                <Button android:text="DONE"
                        android:background="@drawable/button_blue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        style="@style/ButtonTextTiny"
                        android:drawableLeft="@drawable/appbarthumbsup"
                        android:id="@+id/bnReplenDialogFinish"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>