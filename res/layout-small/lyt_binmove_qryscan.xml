                <!--android:singleLine="true"-->
                <!--android:maxLines="1"-->
                <!--android:textColor="#ffffff"-->
                <!--android:background="@null"-->
                <!--android:cursorVisible="false">-->
        <!--</EditText>-->
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:hint="@string/hint_barcode"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="phone"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:id="@+id/etxtQryScanBarcode"/>
            <Button android:text="ByHand"
                    android:background="@drawable/button_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    style="@style/ButtonTextTiny"
                    android:drawableLeft="@drawable/appbarcursorhand"
                    android:id="@+id/bnEnterBarcodeQryScan"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_BinCode"
                android:id="@+id/txtvQryScanBinCode"/>
        <!--<EditText-->
                <!--android:id="@+id/etxtQryScanBin"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
