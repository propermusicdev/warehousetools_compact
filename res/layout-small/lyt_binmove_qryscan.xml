<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_black">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/button_beige"
                  android:id="@+id/lytQryScanMain">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textSize="14sp"
                android:text="@string/intro_Description"
                android:id="@+id/txtvQryScanSingleIntro"
                android:textColor="#ffffff"/>

        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/but_start"
                android:id="@+id/bnQryScanPerformScan"
                android:background="@drawable/button_palebrown"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarbarcode"/>

        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/action_exit"
                android:id="@+id/bnExitActQryScan"
                android:background="@drawable/button_red"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarpower"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_Barcode"
                android:id="@+id/txtvQryScanBarcode"/>
        <!--<EditText-->
                <!--android:id="@+id/etxtQryScanBarcode"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:hint="@string/sampletext"-->
                <!--android:ellipsize="end"-->
