<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:background="@drawable/button_sandrift">

    <LinearLayout
            android:id="@+id/lytQueryChooserMain"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fiveDp_margin"
                android:layout_marginRight="@dimen/fiveDp_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/intro_qryChooserDescription"
                android:textColor="#333333"
                android:id="@+id/txtvIntroQryChooser"/>
        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/action_qryBarcode"
                android:id="@+id/bnQryChooserBarcode"
                android:background="@drawable/button_blue"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarbarcode"/>
        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/action_qryBin"
                android:id="@+id/bnQryChooserBin"
                android:background="@drawable/button_green"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarbarcode"/>
        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/action_qryBarcodeBin"
                android:id="@+id/bnQryChooserBarcodeBin"
                android:background="@drawable/button_purpple"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarbarcode"/>
        <Button android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/action_exit"
                android:id="@+id/bnExitActQryChooser"
                android:background="@drawable/button_red"
                android:width="190dp"
                android:height="40dp"
                android:layout_gravity="center"
                style="@style/ButtonTextTiny"
                android:drawableLeft="@drawable/appbarpower"/>
    </LinearLayout>
</ScrollView>